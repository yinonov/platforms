{
  "compilerOptions": {
    "pretty": true,
    "target": "ES2015", // according to https://fast.design/docs/integrations#typescript. changing this will break decorators
    "module": "ES2022",
    "moduleResolution": "node",
    "importHelpers": true, // when using decorators this allows for the smallest footprint using tslib
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "outDir": "dist/build",
    "rootDir": "src",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/app/pages/*"], // Updated to include "app"
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@templates/*": ["src/templates/*"],
      "@context/*": ["src/context/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"],
      "@app/*": ["src/app/*"]
    }
  },
  "include": ["src"]
}
