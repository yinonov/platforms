{
  "compilerOptions": {
    "pretty": true,
    "target": "ES2015", // according to https://fast.design/docs/integrations#typescript. changing this will break decorators
    "module": "ES2022",
    "moduleResolution": "node",
    "importHelpers": true, // when using decorators this allows for the smallest footprint using tslib
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "outDir": "dist/build",
    "rootDir": "src",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components/index.ts"],
      "@pages": ["src/pages/index.ts"],
      "@services": ["src/services/index.ts"],
      "@models": ["src/models/index.ts"],
      "@templates": ["src/templates/index.ts"],
      "@context": ["src/context/index.ts"],
      "@constants": ["src/constants/index.ts"],
      "@utils": ["src/utils/index.ts"],
      "@app": ["src/app/index.ts"]
    }
  },
  "include": ["src"]
}
