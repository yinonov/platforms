{
  "name": "contracts-monorepo",
  "packageManager": "npm@10.5.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^2.5.2"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
